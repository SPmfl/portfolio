---
import Layout from '@/layouts/Layout.astro'
import { getLangFromUrl, useTranslations, getTranslatedPath } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout title={t('404.title')} description={t('404.description')}>
  <main>
    <section class="flex">
      <div class="border-container flex flex-col items-center justify-center rounded-2xl">
        <p class="font-heading text-6xl font-bold">404</p>
        <h1 class="font-heading text-4xl font-medium">
          {t('404.content.1')}
        </h1>
        <p class="mt-4 text-center">{t('404.content.2')}</p>
        <a class="bs-btns" href={getTranslatedPath('/', lang)}>{t('404.back')}</a>
      </div>
    </section>
  </main>
</Layout>

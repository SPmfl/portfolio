---
import { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

export interface Props {
  title: string
  description: string
  href: string
  buttonLeyend: string
  imgLink?: string
  imgPhoto?: ImageMetadata
}
const { title, description, href, buttonLeyend, imgLink, imgPhoto } = Astro.props
---

<div
  class="col-span-2 w-full rounded-md dark:bg-gray-900 dark:text-gray-100 shadow-md md:col-span-1 lg:col-span-1 bg-gray-50 text-gray-800"
>
  {
    imgPhoto && !imgLink && (
      <Image
        src={imgPhoto}
        format="jpg"
        quality="high"
        alt="Security cameras"
        loading="eager"
        id="hero-image"
        class="h-72 w-full rounded-t-md bg-gray-500 object-cover object-center dark:bg-gray-500"
      />
    )
  }
  {
    imgLink && !imgPhoto && (
      <img
        src={imgLink}
        alt=""
        class="h-72 w-full rounded-t-md bg-gray-500 object-cover object-center dark:bg-gray-500"
      />
    )
  }
  <div class="flex flex-col justify-between space-y-8 p-6">
    <div class="space-y-2">
      <h2 class="text-3xl font-semibold tracking-wide">{title}</h2>
      <p class="dark:text-gray-100 text-gray-800">{description}</p>
    </div>
    <a
      href={href}
      target="_blank"
      class="flex w-full items-center justify-center rounded-md bg-violet-400 p-3 font-semibold tracking-wide text-gray-900 hover:cursor-pointer dark:bg-violet-600 dark:text-gray-50"
    >
      {buttonLeyend}
    </a>
  </div>
</div>

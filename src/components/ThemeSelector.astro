<script>
  document.addEventListener('DOMContentLoaded', () => {
    const themeBtn = document.getElementById('theme-selector') as HTMLAnchorElement
    const sunIcon = document.getElementById('sun-icon') as HTMLOrSVGImageElement
    const moonIcon = document.getElementById('moon-icon') as HTMLOrSVGImageElement

    // Establecer el tema inicial basado en la preferencia del sistema o el almacenamiento local
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches

    function updateIcons() {
      const theme = localStorage.getItem('theme')
      if (theme === 'dark') {
        sunIcon.classList.remove('hidden')
        moonIcon.classList.add('hidden')
      } else {
        sunIcon.classList.add('hidden')
        moonIcon.classList.remove('hidden')
      }
    }

    updateIcons()

    themeBtn?.addEventListener('click', (e) => {
      e.preventDefault()
      const theme = localStorage.getItem('theme')
      if (theme === 'dark') {
        localStorage.setItem('theme', 'light')
        document.documentElement.classList.remove('dark')
      } else {
        localStorage.setItem('theme', 'dark')
        document.documentElement.classList.add('dark')
      }
      updateIcons()
    })
  })
</script>

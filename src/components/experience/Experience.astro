---
import { getLangFromUrl, useTranslations, getTranslatedPath } from '@/i18n/utils'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section
  id="experience"
  class="border-container flex w-full items-center justify-center rounded-2xl !border-none bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-100"
>
  <div class="container mx-auto space-y-8 px-4 py-16 lg:max-w-3xl">
    <h2 class="text-2xl font-bold md:text-4xl">{t('experience.title')}</h2>
    <div class="space-y-8">
      <div>
        <h3 class="mb-3 text-lg font-bold md:text-xl">2025 - {t('experience.present')}</h3>
        <ul class="space-y-4">
          <li class="space-y-1">
            <div class="flex items-center space-x-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 512 512"
                class="text-secondary dark:text-secondary-dark h-4 w-4 fill-current"
              >
                <path
                  d="M426.072,86.928A238.75,238.75,0,0,0,88.428,424.572,238.75,238.75,0,0,0,426.072,86.928ZM257.25,462.5c-114,0-206.75-92.748-206.75-206.75S143.248,49,257.25,49,464,141.748,464,255.75,371.252,462.5,257.25,462.5Z"
                ></path>
                <polygon
                  points="221.27 305.808 147.857 232.396 125.23 255.023 221.27 351.063 388.77 183.564 366.142 160.937 221.27 305.808"
                ></polygon>
              </svg>
              <h4 class="font-medium">{t('experience.content.1')}</h4>
            </div>
            <p class="ml-7 text-gray-400 dark:text-gray-600">{t('experience.content.2')}</p>
          </li>
        </ul>
      </div>
      <div>
        <h3 class="mb-3 text-lg font-bold md:text-xl">2023 - 2025</h3>
        <ul class="space-y-4">
          <li class="space-y-1">
            <div class="flex items-center space-x-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 512 512"
                class="text-secondary dark:text-secondary-dark h-4 w-4 fill-current"
              >
                <path
                  d="M426.072,86.928A238.75,238.75,0,0,0,88.428,424.572,238.75,238.75,0,0,0,426.072,86.928ZM257.25,462.5c-114,0-206.75-92.748-206.75-206.75S143.248,49,257.25,49,464,141.748,464,255.75,371.252,462.5,257.25,462.5Z"
                ></path>
                <polygon
                  points="221.27 305.808 147.857 232.396 125.23 255.023 221.27 351.063 388.77 183.564 366.142 160.937 221.27 305.808"
                ></polygon>
              </svg>
              <h4 class="font-medium">{t('experience.content.3')}</h4>
            </div>
            <p class="ml-7 text-gray-400 dark:text-gray-600">
              {t('experience.content.4')}
            </p>
          </li>
        </ul>
      </div>
      <div>
        <h3 class="mb-3 text-lg font-bold md:text-xl">2021 - 2023</h3>
        <ul class="space-y-4">
          <li class="space-y-1">
            <div class="flex items-center space-x-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 512 512"
                class="text-secondary dark:text-secondary-dark h-4 w-4 fill-current"
              >
                <path
                  d="M426.072,86.928A238.75,238.75,0,0,0,88.428,424.572,238.75,238.75,0,0,0,426.072,86.928ZM257.25,462.5c-114,0-206.75-92.748-206.75-206.75S143.248,49,257.25,49,464,141.748,464,255.75,371.252,462.5,257.25,462.5Z"
                ></path>
                <polygon
                  points="221.27 305.808 147.857 232.396 125.23 255.023 221.27 351.063 388.77 183.564 366.142 160.937 221.27 305.808"
                ></polygon>
              </svg>
              <h4 class="font-medium">{t('experience.content.5')}</h4>
            </div>
            <p class="ml-7 text-gray-400 dark:text-gray-600">{t('experience.content.6')}</p>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
